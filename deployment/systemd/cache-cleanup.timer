[Unit]
Description=Business Hub Cache Cleanup Timer
Documentation=https://github.com/Lukes-Git-Beginning/slot-booking-webapp
Requires=cache-cleanup.service

[Timer]
# Run daily at 3 AM
OnCalendar=daily
OnCalendar=*-*-* 03:00:00

# Run 5 minutes after boot if missed
OnBootSec=5min

# Randomize start time by up to 30 minutes to avoid load spikes
RandomizedDelaySec=30min

# Persistent across reboots
Persistent=true

[Install]
WantedBy=timers.target
