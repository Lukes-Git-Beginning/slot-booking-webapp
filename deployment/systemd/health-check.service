[Unit]
Description=Business Hub Internal Health Check
After=network.target business-hub.service

[Service]
Type=oneshot
User=root
WorkingDirectory=/opt/business-hub
ExecStart=/opt/business-hub/venv/bin/python3 /opt/business-hub/scripts/health_check.py
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
