# ========================================
# Business Tool Hub - Environment Configuration
# ========================================
#
# WICHTIG: Diese Datei dient als Template!
# 1. Kopiere diese Datei: cp .env.example .env
# 2. Fülle alle Werte aus
# 3. NIEMALS .env in Git committen!
#
# ========================================

# ----------------------------------------
# Flask Core Settings
# ----------------------------------------

# Flask Secret Key - MUSS geändert werden!
# Generieren mit: python3 -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-super-secret-key-here-change-this-now

# Flask Environment (development, production, testing)
FLASK_ENV=production

# Debug Mode (NIEMALS True in Production!)
FLASK_DEBUG=False

# ----------------------------------------
# Google Calendar API Integration
# ----------------------------------------

# Base64-kodierte Service Account Credentials
# Erstellen: base64 -w 0 service_account.json
# Das Service Account JSON muss folgende Struktur haben:
# {
#   "type": "service_account",
#   "project_id": "...",
#   "private_key_id": "...",
#   "private_key": "...",
#   "client_email": "...",
#   "client_id": "...",
#   ...
# }
GOOGLE_CREDS_BASE64=your-base64-encoded-service-account-json-here

# Zentrale Kalender-ID (E-Mail-Adresse des Hauptkalenders)
CENTRAL_CALENDAR_ID=zentralkalenderzfa@gmail.com

# ----------------------------------------
# Consultant Calendar IDs (Slot-Booking Tool #1)
# ----------------------------------------
# Format: name:email,name2:email2

CONSULTANTS=Lukas:lukaskalender@gmail.com,Daniel:danielkalender@gmail.com,Thomas:thomaskalender@gmail.com

# ----------------------------------------
# T2 Closer Calendar IDs (T2-Closer Tool #2)
# ----------------------------------------
# Format: name:email,name2:email2

T2_CLOSERS=Adem:adem@calendars.google.com,Okan:okan@calendars.google.com,Salih:salih@calendars.google.com,Samy:samy@calendars.google.com,Tim:tim@calendars.google.com,Paul:paul@calendars.google.com

# ----------------------------------------
# User Authentication
# ----------------------------------------

# User List (Format: username:password,username2:password2)
# Empfehlung: Starke Passwörter verwenden!
# Beispiel: user1:SecureP@ss123,user2:Anoth3rStr0ng!Pass
USERLIST=admin:change-this-password,user1:user1-password,user2:user2-password

# Admin Users (Komma-getrennte Liste von Benutzernamen)
# Diese Benutzer haben Admin-Rechte im System
ADMIN_USERS=admin

# ----------------------------------------
# Gamification Settings
# ----------------------------------------

# Benutzer die von Leaderboards ausgeschlossen werden sollen
# (z.B. Test-Accounts oder System-Accounts)
# Format: Komma-getrennte Liste
EXCLUDED_CHAMPION_USERS=test_user,system_admin

# ----------------------------------------
# Booking Configuration
# ----------------------------------------

# Maximale Buchungszeit im Voraus (Tage)
MAX_BOOKING_DAYS_AHEAD=56

# Slots pro Berater
SLOTS_PER_BERATER=4

# Timezone
TIMEZONE=Europe/Berlin

# ----------------------------------------
# Data Persistence (Provider-agnostisch)
# ----------------------------------------

# Base Directory für persistente Daten
#
# VPS (Hetzner, Strato, etc.): /opt/business-hub/data
# Render.com: /opt/render/project/src/persist
# Lokal: ./data (relativ)
#
# WICHTIG: Leer lassen für Auto-Detection!
# Die Anwendung erkennt automatisch:
#  1. PERSIST_BASE Env-Variable (falls gesetzt)
#  2. Render.com (/opt/render/project/src/persist)
#  3. VPS Standard (/opt/business-hub/data)
#  4. Fallback (./data)
#
# Für VPS: PERSIST_BASE=/opt/business-hub/data
PERSIST_BASE=

# Backup Directory
# Default: {PERSIST_BASE}/backups
# Explizit setzen falls anderer Pfad gewünscht
BACKUP_DIR=

# ----------------------------------------
# Session Configuration
# ----------------------------------------

# Session Lifetime (in Stunden)
SESSION_LIFETIME_HOURS=8

# Session Cookie Settings
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# ----------------------------------------
# Logging Configuration
# ----------------------------------------

# Log Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log File Path
# Default: /var/log/business-hub/app.log
LOG_FILE=/var/log/business-hub/app.log

# Enable detailed logging for debugging (True/False)
DETAILED_LOGGING=False

# ----------------------------------------
# Performance & Caching
# ----------------------------------------

# Enable caching (True/False)
ENABLE_CACHING=True

# Cache timeout in seconds (default: 300 = 5 minutes)
CACHE_TIMEOUT=300

# ----------------------------------------
# Monitoring & Health Checks
# ----------------------------------------

# Enable health check endpoint (True/False)
ENABLE_HEALTH_CHECK=True

# Health check secret token (für externe Monitoring-Tools)
# HEALTH_CHECK_TOKEN=your-monitoring-secret-token

# ----------------------------------------
# Maintenance Mode
# ----------------------------------------

# Enable maintenance mode (True/False)
# Wenn True, zeigt die Anwendung die Wartungsseite an
MAINTENANCE_MODE=False

# Maintenance message (wird auf der Wartungsseite angezeigt)
MAINTENANCE_MESSAGE=System wird gerade gewartet. Bitte versuchen Sie es in wenigen Minuten erneut.

# ----------------------------------------
# Optional: Email Notifications
# ----------------------------------------
# Für zukünftige Features

# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM_EMAIL=noreply@business-hub.com
# SMTP_USE_TLS=True

# ----------------------------------------
# Optional: External Services
# ----------------------------------------

# Sentry Error Tracking
# SENTRY_DSN=your-sentry-dsn-for-error-tracking

# Redis Cache
# REDIS_URL=redis://localhost:6379/0

# ----------------------------------------
# Advanced Settings (Nur für Entwickler)
# ----------------------------------------

# JSON Encoding (ensure_ascii=False für deutsche Umlaute)
JSON_AS_ASCII=False

# Max Content Length für Uploads (in Bytes)
# 16MB = 16777216
MAX_CONTENT_LENGTH=16777216

# Max Backups
MAX_BACKUPS=10

# Backup Retention Days
BACKUP_RETENTION_DAYS=30