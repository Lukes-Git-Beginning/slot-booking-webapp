# ==============================================
# Slot Booking Webapp - Environment Configuration
# ==============================================

# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-here
DEBUG=True

# Google Calendar API
GOOGLE_CREDS_BASE64=your-base64-encoded-service-account-json
CENTRAL_CALENDAR_ID=your-calendar-id@gmail.com

# User Authentication (format: username:password,username2:password2)
USERLIST=admin:password,user1:password1

# Admin Users (comma-separated)
ADMIN_USERS=admin,administrator

# Booking Configuration
MAX_BOOKING_DAYS_AHEAD=56
SLOTS_PER_BERATER=4
TIMEZONE=Europe/Berlin

# Logging
LOG_LEVEL=INFO
LOG_DIR=logs

# Cache Settings
CACHE_TIMEOUT=300

# Database/Persistence
PERSIST_BASE=/opt/render/project/src/persist

# Optional: External Services
# SENTRY_DSN=your-sentry-dsn-for-error-tracking
# REDIS_URL=redis://localhost:6379/0