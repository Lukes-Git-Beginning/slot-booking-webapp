# ============================================
# BUSINESS-HUB - ENVIRONMENT CONFIGURATION
# ============================================

# FLASK CORE
SECRET_KEY=your-secret-key-here
FLASK_ENV=production

# DATABASE (PostgreSQL)
USE_POSTGRES=false
DATABASE_URL=postgresql://business_hub_user:password@localhost/business_hub

# REDIS
REDIS_URL=redis://localhost:6379/0
SESSION_TYPE=redis

# DATA PERSISTENCE
PERSIST_BASE=/opt/business-hub/data

# AUTHENTICATION
USERLIST=user:pass
ADMIN_USERS=admin

# GOOGLE CALENDAR
GOOGLE_CREDS_BASE64=your-base64-json
CENTRAL_CALENDAR_ID=calendar@example.com
CONSULTANTS=name:email

# MONITORING (optional)
SENTRY_DSN=
