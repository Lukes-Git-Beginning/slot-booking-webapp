# ============================================
# BUSINESS-HUB - ENVIRONMENT CONFIGURATION
# ============================================

# FLASK CORE
SECRET_KEY=your-secret-key-here
FLASK_ENV=production

# DATABASE (PostgreSQL)
USE_POSTGRES=false
DATABASE_URL=postgresql://business_hub_user:password@localhost/business_hub

# REDIS
REDIS_URL=redis://localhost:6379/0
SESSION_TYPE=redis

# DATA PERSISTENCE
PERSIST_BASE=/opt/business-hub/data

# AUTHENTICATION
USERLIST=user:pass
ADMIN_USERS=admin

# GOOGLE CALENDAR
GOOGLE_CREDS_BASE64=your-base64-json
CENTRAL_CALENDAR_ID=calendar@example.com
CONSULTANTS=name:email
CALENDAR_DRY_RUN=true  # true=block all calendar writes (safe for local dev), false=live writes

# MONITORING (optional)
SENTRY_DSN=

# LOGGING
LOG_LEVEL=INFO
LOG_DIR=/var/log/business-hub  # Production: absolute path, Development: relative 'logs'

# ============================================
# DISCORD NOTIFICATIONS (Optional)
# ============================================

# Discord Webhook URL für T1-Verfügbarkeits-Benachrichtigungen
# Erstellen: Discord Server Settings > Integrations > Webhooks > New Webhook
# Beispiel: https://discord.com/api/webhooks/123456789/abcdefg...
DISCORD_WEBHOOK_URL=

# Discord Benachrichtigungen aktivieren/deaktivieren
# Werte: true, false (Standard: true)
DISCORD_NOTIFICATIONS_ENABLED=true

# Zielbenutzer für Benachrichtigungen (für zukünftige Filterung)
DISCORD_NOTIFICATION_USER=luke.hoppe
